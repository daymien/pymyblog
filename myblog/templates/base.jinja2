<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="de">
<head>
  <meta charset="utf-8"/>

  <title></title>
  <meta name="description" content=""/>
  <meta name="author" content=""/>

  <!-- mobile viewport optimisation -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- stylesheets --> 
  <link rel="stylesheet" href="/static/css/central.dev.css" type="text/css"/>
  <!--[if lte IE 7]>
  <link rel="stylesheet" href="/static/css/yaml/core/iehacks.min.css" type="text/css"/>
  <![endif]-->

  <script src="http://code.jquery.com/jquery-latest.js" type="text/javascript"></script>
  {% block script %}
  {% endblock script %}
  
  {% block head %}
  <title>{% block title %}{% endblock %} - Daymien's Blog</title>
  {% endblock %}
</head>
<body>
  <header>
    <div class="ym-wrapper">
      <div class="ym-wbox">
        <h3><a href="{{ request.application_url }}">Daymien's Blog</a></h3>
      </div>
    </div>
  </header>
  <nav id="nav">
    <div class="ym-wrapper">
      <div class="ym-hlist">
        <ul>
          {% for page in pages %}
          <li><a href="{{ request.application_url }}/page/{{ page.route }}">{{ page.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
  	</div>
  </nav>
  <div id="main">
    <div class="ym-wrapper">
      <div class="ym-wbox">
        <div class="ym-column">
          <div class="ym-col1">
            <div class="ym-cbox">
              {% block content %}
              {% for post in posts %}
                {% include "blog/body.jinja2" %}
              {% endfor %}
              {% endblock content %}
            </div>
          </div>
          <div class="ym-col3">
            <div class="ym-cbox">             
              <div class="nav-wrapper">
                <h4 class="ym-vlist">Blog</h4>
                <ul class="ym-vlist">

                </ul>
                {% if logged_in %}
                <h4 class="ym-vlist">User</h4>
                <ul class="ym-vlist">
                  <li><a href="{{ request.application_url }}/blog/add">Post add</a></li>
                  <li><a href="{{ request.application_url }}/page/add">Page add</a></li>
                  <li><a href="{{ request.application_url }}/user/{{ request.user.id }}/edit">Settings</a></li>
                  <li><a href="{{ request.application_url }}/logout">Abmelden</a></li>
                </ul>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <footer>
    <div class="ym-wrapper">
      <div class="ym-wbox">
        &copy; Reimund Klain 2012 | Layout basiert auf <a href="http://www.yaml.de" alt="YAML">YAML</a> | 
        <a href="http://www.pylonsproject.org">Pyramid</a> | 
        <a href="http://www.python.org">Python</a> | 
      </div>
    </div>
  </footer>
</body>
</html>
