{% extends "base.jinja2" %}
{% block title %} Neue Seite anlegen {% endblock %}
{% block content %}
<form action="{{ url }}" method="post" class="ym-form ym-full">
  <div class="ym-fbox-text {% if form.title.errors %}ym-error{% endif %}">
    {{ form.title.label }}
    {% if form.title.errors %}
      <ul>{% for error in form.title.errors %}<li><p class="ym-message">{{ error}}</p></li>{% endfor %}</ul>
    {% endif %}
    {{ form.title }}
  </div>
  <div class="ym-fbox-text">
    {{ form.body.label }}
    {{ form.body(rows="20") }}
  </div>
  <div class="ym-fbox-button">
    {{ form.submit }}
  </div>
  <div class="ym-fbox-check">
    {{ form.is_published.label }}
    {{ form.is_published }}
  </div>
</form>
{% endblock %}
